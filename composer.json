{
    "name": "homewareontap/ecommerce-platform",
    "description": "HomewareOnTap E-commerce Platform",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-gd": "*",
        "phpmailer/phpmailer": "^6.6",
        "monolog/monolog": "^2.8",
        "guzzlehttp/guzzle": "^7.5",
        "firebase/php-jwt": "^6.4",
        "intervention/image": "^2.7",
        "vlucas/phpdotenv": "^5.5",
        "stripe/stripe-php": "^10.14",
        "payfast/payfast-common": "^1.0",
        "league/csv": "^9.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Homewareontap\\System\\": "system/",
            "Homewareontap\\Lib\\": "lib/",
            "Homewareontap\\Includes\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php -r \"if (!file_exists('assets/uploads')) { mkdir('assets/uploads', 0777, true); }\"",
            "php -r \"if (!file_exists('assets/uploads/products')) { mkdir('assets/uploads/products', 0777, true); }\""
        ],
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR12 system/ lib/ includes/",
        "fix-style": "phpcbf -p --standard=PSR12 system/ lib/ includes/"
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": true,
        "sort-packages": true
    },
    "authors": [
        {
            "name": "HomewareOnTap Team",
            "email": "dev@homewareontap.com"
        }
    ]
}